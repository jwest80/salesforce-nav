{
  "manifest_version": 3,
  "name": "Salesforce Setup Navigator",
  "version": "1.0",
  "description": "Enhanced navigation menu for Salesforce Setup",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mutualofamerica.my.salesforce-setup.com/*"
      ],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
